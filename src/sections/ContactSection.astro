---
import { Icon } from "astro-icon/components";
import Section from "../components/Section.astro";
---

<Section>
    <div class="text-center mb-14">
        <h2 class="text-smoke uppercase text-sm mb-2">Contact</h2>
        <p class="amatic-sc-regular text-5xl">
            Need Help? <span class="text-primary">Contact Us</span>
        </p>
    </div>
    <div class="grid md:grid-cols-2 gap-5">
        <div class="col-span-2">
            <div
                style="overflow:hidden;resize:none;max-width:100%;width:100%;height:400px;"
            >
                <div
                    id="embed-ded-map-canvas"
                    style="height:100%; width:100%;max-width:100%;"
                >
                    <iframe
                        style="height:100%;width:100%;border:0;"
                        frameborder="0"
                        src="https://www.google.com/maps/embed/v1/place?q=Cabantian,+Buhangin,+Davao+City,+Davao+del+Sur,+Philippines&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
                    ></iframe>
                </div><a
                    class="googlecoder"
                    href="https://www.bootstrapskins.com/themes"
                    id="make-map-infor-mation">premium bootstrap themes</a
                >
                <style>
                    #embed-ded-map-canvas img {
                        max-width: none !important;
                        background: none !important;
                        font-size: inherit;
                        font-weight: inherit;
                    }
                </style>
            </div>
        </div>
        <div class="col-span-2 md:col-span-1">
            <div class="bg-dim p-7">
                <div class="flex items-center">
                    <Icon
                        name="mdi:map-marker"
                        class="text-4xl text-white bg-primary w-14 h-14 p-2 rounded-full text-center mr-3"
                    />
                    <div class="block">
                        <h5 class="text-xl mb-2 text-smoke font-semibold">
                            Our Address
                        </h5>
                        <p>A108 Adam Street, New York, NY 535022</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-span-2 md:col-span-1">
            <div class="bg-dim p-7">
                <div class="flex items-center">
                    <Icon
                        name="mdi:email-outline"
                        class="text-4xl text-white bg-primary w-14 h-14 p-2 rounded-full text-center mr-3"
                    />

                    <div class="block">
                        <h5 class="text-xl mb-2 text-smoke font-semibold">
                            Email Us
                        </h5>
                        <p>contact@example.com</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-span-2 md:col-span-1">
            <div class="bg-dim p-7">
                <div class="flex items-center">
                    <Icon
                        name="mdi:phone"
                        class="text-4xl text-white bg-primary w-14 h-14 p-2 rounded-full text-center mr-3"
                    />

                    <div class="block">
                        <h5 class="text-xl mb-2 text-smoke font-semibold">
                            Call Us
                        </h5>
                        <p>+1 12345 789</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-span-2 md:col-span-1">
            <div class="bg-dim p-7">
                <div class="flex items-center">
                    <Icon
                        name="mdi:clock-time-five"
                        class="text-4xl text-white bg-primary w-14 h-14 p-2 rounded-full text-center mr-3"
                    />

                    <div class="block">
                        <h5 class="text-xl mb-2 text-smoke font-semibold">
                            Opening Hours
                        </h5>
                        <p>
                            <strong>Mon-Sat: </strong>11AM-11PM; <strong
                                >Sunday:
                            </strong>Closed
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-span-2">
            <form action="" class="p-7 bg-dim text-center">
                <div class="grid lg:grid-cols-2 gap-5">
                    <div class="lg:col-span-1">
                        <input
                            type="text"
                            name="name"
                            id="name"
                            class="p-2.5 rounded w-full border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                            placeholder="Your Name"
                        />
                    </div>
                    <div class="lg:col-span-1">
                        <input
                            type="email"
                            name="email"
                            id="email"
                            class="p-2.5 rounded w-full border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                            placeholder="Your Email"
                        />
                    </div>
                    <div class="lg:col-span-2">
                        <input
                            type="text"
                            name="subject"
                            id="subject"
                            class="p-2.5 rounded w-full border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                            placeholder="Subject"
                        />
                    </div>
                    <div class="lg:col-span-2">
                        <textarea
                            name="message"
                            id="message"
                            class="p-2.5 rounded w-full border focus:outline-none focus:border-primary focus:ring-primary focus:ring-1"
                            placeholder="Message"
                            rows="5"></textarea>
                    </div>
                </div>
                <button
                    type="submit"
                    class="text-white bg-primary px-12 py-3 rounded-3xl mx-auto mt-5"
                    >Submit</button
                >
            </form>
        </div>
    </div>
</Section>
